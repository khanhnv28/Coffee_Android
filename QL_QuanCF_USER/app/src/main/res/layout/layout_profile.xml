<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="#2C92EA"
        android:padding="20dp"
       >
        <ImageView
            android:id="@+id/imgAVT"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile_72" />

        <TextView
            android:id="@+id/tvTenKH"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:textSize="10pt"
            android:layout_gravity="center"
            android:gravity="left|center"
            android:layout_marginLeft="10px"
            android:text="TextView" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/custom_textview">
        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:textSize="10pt"
            android:text="Ví Voucher"
            android:gravity="left|center"

            />
        <TextView
            android:id="@+id/tvLSDonHang"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:textSize="10pt"
            android:text="Lịch sử đơn hàng"
            android:gravity="left|center"

            />
        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:textSize="10pt"
            android:text="Thanh toán"
            android:gravity="left|center"

            />
        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:textSize="10pt"
            android:text="Địa chỉ"
            android:gravity="left|center"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/custom_textview">
        <TextView
            android:id="@+id/text6"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:textSize="10pt"
            android:text="Giới thiệu bạn"
            android:gravity="left|center"
          />
        <TextView
            android:id="@+id/text7"
            android:layout_width="match_parent"
            android:layout_height="35dp"

            android:textSize="10pt"
            android:text="Trung tâm hổ trợ"
            android:gravity="left|center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/custom_textview">
        <TextView
            android:id="@+id/tvDangXuat"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:textSize="10pt"
            android:text="Đăng xuất"
            android:gravity="left|center"
           />

    </LinearLayout>

</LinearLayout>